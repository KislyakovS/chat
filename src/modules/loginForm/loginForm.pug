include ../../components/field/field.pug
include ../../components/button/button.pug
include ../../components/link/link.pug

mixin loginForm()
    form().login-form
        +field("Invalid login", "login-form__field w-100")(type="text" placeholder="Login" name="login") Login
        +field("Invalid password", "login-form__field w-100")(type="password" placeholder="Password" name="password") Password
        +button(type="submit").login-form__submit.w-100 Sign in
        +link(href="/pages/sign-up").login-form__link Create profile
